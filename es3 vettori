#include <stdio.h>

int main() {
    int dim;
    int num;
    int contatore = 0;
    int posizioni[100];

    do {
        printf("Inserisci la dimensione del vettore (deve essere maggiore di 0): ");
        scanf("%d", &dim);
    } while (dim <= 0);

    int vettore[dim];
    printf("Inserisci %d numeri interi:\n", dim);
    for (int i = 0; i < dim; i++) {
        scanf("%d", &vettore[i]);
    }

    printf("Inserisci il numero da cercare: ");
    scanf("%d", &num);

    
    for (int i = 0; i < dim; i++) {
        if (vettore[i] == num) {
            posizioni[contatore++] = i;
        }
    }

    if (contatore > 0) {
        printf("Il numero %d si ripete %d volte nelle seguenti posizioni:\n", num, contatore);
        for (int i = 0; i < contatore; i++) {
            printf("Posizione %d\n", posizioni[i] + 1); 
        }
    } else {
        printf("Il numero %d non Ã¨ presente nel vettore.\n", num);
    }

    return 0;
}
